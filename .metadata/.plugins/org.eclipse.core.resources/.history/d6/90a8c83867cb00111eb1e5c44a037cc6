		txtNome.setPreferredSize(DFIELDM);
		
		lbEndereco = new JLabel("Endereço: ", JLabel.RIGHT);
		lbEndereco.setPreferredSize(DLABEL);
		lbEndereco.setMinimumSize(DLABEL);
		
