	@Override
	public VendaVO insertVenda(VendaVO venda) throws SQLException,
			MensagemSaoDimasException {
		Connection conn = null;
		try {
			conn = SqlConnector.getInstance().getConnection();
			DAOFactory.DEFAULT.buildVendaDAO().save(venda, conn);
			
			List<ProdutoVendaVO> listProd = venda.getProdutos();
			if(listProd != null){
				for (ProdutoVendaVO prod : listProd) {
					prod.setVenda(venda);
					DAOFactory.DEFAULT.buildProdutoVendaDAO().save(prod, conn);
				}
			}
			
			return venda;

		} finally {

		}
	}

